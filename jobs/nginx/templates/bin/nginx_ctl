#!/bin/bash

set -eu

RUN_DIR=/var/vcap/sys/run/nginx
LOG_DIR=/var/vcap/sys/log/nginx
TMP_DIR=/var/vcap/sys/tmp/nginx
STORE_DIR=/var/vcap/store/nginx
mkdir -p ${RUN_DIR} ${LOG_DIR} ${TMP_DIR} ${STORE_DIR}

PIDFILE=${RUN_DIR}/nginx.pid

source /var/vcap/packages/nginx_prometheus/common/utils.sh

export PATH=/var/vcap/packages/nginx_prometheus/sbin:${PATH}

case $1 in
  start)
    pid_guard ${PIDFILE} "nginx"

    alertmanager_auth_file="${STORE_DIR}/htpasswd_alertmanager"
    if [ -f "$alertmanager_auth_file" ]; then
      rm "$alertmanager_auth_file"
    fi
    grafana_auth_file="${STORE_DIR}/htpasswd_grafana"
    if [ -f "$grafana_auth_file" ]; then
      rm "$grafana_auth_file"
    fi
    prometheus_auth_file="${STORE_DIR}/htpasswd_prometheus"
    if [ -f "$prometheus_auth_file" ]; then
      rm "$prometheus_auth_file"
    fi

    [ -f "$alertmanager_auth_file" ] && rm "$alertmanager_auth_file"
    <% p('nginx.alertmanager.auth_users').each do |user| %>
      <%
        username = user['name']
        password = user['password']

        if username.nil? || username.empty?
          raise "User must be configured with a 'name' attribute. '#{user}'"
        end

        if password.nil? || password.empty?
          raise "User must be configured with a 'password' attribute. '#{user}'"
        end
      %>

    echo "<%= username %>:`openssl passwd -1 -quiet "<%= password %>"`" >> "$alertmanager_auth_file"
    <% end %>

    [ -f "$grafana_auth_file" ] && rm "$grafana_auth_file"
    <% p('nginx.grafana.auth_users').each do |user| %>
      <%
        username = user['name']
        password = user['password']

        if username.nil? || username.empty?
          raise "User must be configured with a 'name' attribute. '#{user}'"
        end

        if password.nil? || password.empty?
          raise "User must be configured with a 'password' attribute. '#{user}'"
        end
      %>

    echo "<%= username %>:`openssl passwd -1 -quiet "<%= password %>"`" >> "$grafana_auth_file"
    <% end %>

    [ -f "$prometheus_auth_file" ] && rm "$prometheus_auth_file"
    <% p('nginx.prometheus.auth_users').each do |user| %>
      <%
        username = user['name']
        password = user['password']

        if username.nil? || username.empty?
          raise "User must be configured with a 'name' attribute. '#{user}'"
        end

        if password.nil? || password.empty?
          raise "User must be configured with a 'password' attribute. '#{user}'"
        end
      %>

    echo "<%= username %>:`openssl passwd -1 -quiet "<%= password %>"`" >> "$prometheus_auth_file"
    <% end %>

    exec nginx \
      -p ${TMP_DIR} \
      -c /var/vcap/jobs/nginx/config/nginx.conf \
      >>  ${LOG_DIR}/nginx.stdout.log \
      2>> ${LOG_DIR}/nginx.stderr.log
    ;;

  stop)
    kill_and_wait ${PIDFILE}
    ;;

  *)
    echo "Usage: $0 {start|stop}"
    exit 1
    ;;

esac
exit 0
