check process statsd_bridge
  with pidfile /var/vcap/sys/run/statsd_bridge/statsd_bridge.pid
  start program "/var/vcap/jobs/statsd_bridge/bin/monit_debugger statsd_bridge_ctl '/var/vcap/jobs/statsd_bridge/bin/statsd_bridge_ctl start'"
  stop program "/var/vcap/jobs/statsd_bridge/bin/monit_debugger statsd_bridge_ctl '/var/vcap/jobs/statsd_bridge/bin/statsd_bridge_ctl stop'"
  group vcap
