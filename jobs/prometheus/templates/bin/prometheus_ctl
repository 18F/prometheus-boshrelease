#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/prometheus/helpers/ctl_setup.sh 'prometheus'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8


DATA_DIR=/tmp/prometheus
PKG=/var/vcap/packages/prometheus
PROMETHEUS=$PKG/prometheus
CONFIG=/var/vcap/jobs/prometheus/config/prometheus.conf
PROM_OPTS="-logtostderr -config.file=$CONFIG -storage.local.path=$DATA_DIR -web.console.libraries=$PKG/console_libraries -web.console.templates=$PKG/consoles"

case $1 in

  start)
    mkdir -p /tmp/prometheus
    chown vcap:vcap $DATA_DIR

    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec chpst -u vcap:vcap $PROMETHEUS $PROM_OPTS \
         >>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: prometheus_ctl {start|stop}"

    ;;

esac
exit 0
