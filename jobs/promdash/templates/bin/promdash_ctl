#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/promdash/helpers/ctl_setup.sh 'promdash'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

DATABASE_URL="mysql2://promdash:promdash@10.244.1.2/promdash"
RAILS_ENV="production"

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE
#    bin/rake db:migrations
    exec chpst -u vcap:vcap bin/env bin/bundle exec bin/thin -p $PORT start \
         >>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: promdash_ctl {start|stop}"

    ;;

esac
exit 0
